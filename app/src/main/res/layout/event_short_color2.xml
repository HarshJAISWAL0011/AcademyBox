<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/card3"
        android:elevation="0dp"
        android:layout_margin= "15dp"
        app:cardCornerRadius="28dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/up_club_event_2">




            <androidx.cardview.widget.CardView
                android:layout_width="250px"
                android:layout_height="250px"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                android:visibility="invisible"
                app:cardCornerRadius="100dp"
                android:elevation="0dp"
                app:cardBackgroundColor="@color/card4"
                >

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/angkor"
                    android:text="31"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginBottom="16dp"
                    android:text="Aug"

                    android:fontFamily="@font/almendra"
                    android:textStyle="bold"
                    android:textColor="#3E3E3E"
                    android:textSize="22sp" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250px"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/clickable"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:id="@+id/description"
                    android:textColor="#545353"
                    android:text="Coding competetion schedule on 31 Sep 2024"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    android:gravity="bottom"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/notify"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="bottom|right"
                        android:adjustViewBounds="true"
                        android:background="@drawable/touch_selector"
                        android:focusableInTouchMode="true"
                        android:layout_margin="5dp"
                        android:backgroundTint="@color/card3"
                        android:scaleType="centerInside"
                        android:src="@drawable/noti1" />

                    <ImageButton
                        android:id="@+id/share"
                        android:layout_width="21dp"
                        android:layout_height="20dp"
                        android:layout_gravity="bottom|right"
                        android:adjustViewBounds="true"
                        android:background="@drawable/touch_selector"
                        android:backgroundTint="@color/card3"
                        android:layout_margin="5dp"
                        android:focusableInTouchMode="true"
                        android:scaleType="centerInside"
                        android:src="@drawable/share" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="260px"
        android:layout_height="260px"
        android:adjustViewBounds="true"
        android:id="@+id/date_picker_actions"
        android:layout_marginStart="5dp"
        android:layout_marginTop="1dp"
        app:cardCornerRadius="100dp"
        android:elevation="0dp"
        app:cardBackgroundColor="@color/card2"
        >

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/angkor"
            android:text="31"
            android:textColor="@color/black"
            android:textSize="30sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="16dp"
            android:text="Aug"
            android:id="@+id/month"
            android:fontFamily="@font/almendra"
            android:textStyle="bold"
            android:textColor="#3E3E3E"
            android:textSize="22sp" />

    </androidx.cardview.widget.CardView>
</RelativeLayout>